{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}

    <h1>Liste des articles</h1>

    <ul>
    
    {% for post in posts %}
        <li><a href="{{ path('post_read', { 'id' : post.id }) }}">{{ post.title }}</a> - <a href="{{ path('post_edit', { 'id' : post.id }) }}">Editer</a> - <a href="{{ path('post_delete', { 'id' : post.id }) }}">Supprimer</a></li>
    {% endfor %}
    </ul>

    <p><a href="{{ path('post_add') }}">Ajouter un article</a></p>

{% endblock %}
